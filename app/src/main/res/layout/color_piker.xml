<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ColorWheelHUE"
        android:layout_width="0dp"
        android:layout_height="411dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/color_wheelhue" />

    <SeekBar
        android:id="@+id/RedBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="150dp"
        android:layout_marginRight="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ColorWheelHUE"
        android:max="255"
        android:progress="1"/>
    <ProgressBar
        android:id="@+id/RedPro"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/RedBar"
        app:layout_constraintEnd_toEndOf="@+id/RedBar"
        app:layout_constraintStart_toStartOf="@+id/RedBar"
        app:layout_constraintTop_toTopOf="@+id/RedBar" />

    <SeekBar
        android:id="@+id/GreenBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="150dp"
        android:layout_marginRight="150dp"
        android:max="255"
        android:progress="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RedBar"
        />
    <ProgressBar
        android:id="@+id/GreenPro"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/GreenBar"
        app:layout_constraintEnd_toEndOf="@+id/GreenBar"
        app:layout_constraintStart_toStartOf="@+id/GreenBar"
        app:layout_constraintTop_toTopOf="@+id/GreenBar"
            />


    <SeekBar
        android:id="@+id/BlueBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="150dp"
        android:layout_marginRight="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GreenBar"
        android:max="255"
        android:progress="1"/>

    <ProgressBar
        android:id="@+id/BluePro"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/BlueBar"
        app:layout_constraintEnd_toEndOf="@+id/BlueBar"
        app:layout_constraintStart_toStartOf="@+id/BlueBar"
        app:layout_constraintTop_toTopOf="@+id/BlueBar" />

    <TextView
        android:id="@+id/RedVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:text="255"
        app:layout_constraintStart_toEndOf="@+id/RedBar"
        app:layout_constraintTop_toBottomOf="@+id/ColorWheelHUE" />

    <TextView
        android:id="@+id/GreenVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:text="255"
        app:layout_constraintStart_toEndOf="@+id/GreenBar"
        app:layout_constraintTop_toBottomOf="@+id/RedVal" />

    <TextView
        android:id="@+id/BlueVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:text="255"
        app:layout_constraintStart_toEndOf="@+id/BlueBar"
        app:layout_constraintTop_toBottomOf="@+id/GreenVal" />




</androidx.constraintlayout.widget.ConstraintLayout>