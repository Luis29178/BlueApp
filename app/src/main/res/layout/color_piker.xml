<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--region Red-->
    <ImageView
        android:id="@+id/ColorWheelHUE"
        android:layout_width="411dp"
        android:layout_height="411dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        app:srcCompat="@drawable/color_wheelhue" />

    <SeekBar
        android:id="@+id/RedBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ColorWheelHUE"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="150dp"
        android:layout_marginRight="150dp"
        android:max="255"
        android:progress="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ColorWheelHUE" />

    <ProgressBar
        android:id="@+id/RedPro"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/RedBar"
        android:layout_alignLeft="@+id/RedBar"
        android:layout_alignTop="@+id/RedBar"
        android:layout_alignEnd="@+id/RedBar"
        android:layout_alignRight="@+id/RedBar"
        android:layout_alignBottom="@+id/RedBar"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:max="255"
        />


    <TextView
        android:id="@+id/RedVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ColorWheelHUE"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:text="@string/_RedVal" />
    <!--endregion-->

    <SeekBar
        android:id="@+id/GreenBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RedBar"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="150dp"
        android:layout_marginRight="150dp"
        android:max="255"
        android:progress="1"
         />

    <ProgressBar
        android:id="@+id/GreenPro"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="10dp"
        android:layout_height="100dp"
        android:max="255"
        android:layout_alignStart="@+id/GreenBar"
        android:layout_alignLeft="@+id/GreenBar"
        android:layout_alignTop="@+id/GreenBar"
        android:layout_alignEnd="@+id/GreenBar"
        android:layout_alignRight="@+id/GreenBar"
        android:layout_alignBottom="@+id/GreenBar"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp" />
    <TextView
        android:id="@+id/GreenVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RedVal"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:text="@string/_GreenVal" />

    <SeekBar
        android:id="@+id/BlueBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/GreenBar"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="150dp"
        android:layout_marginRight="150dp"
        android:max="255"
        android:progress="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GreenBar" />

    <ProgressBar
        android:id="@+id/BluePro"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@+id/BlueBar"
        android:layout_alignLeft="@+id/BlueBar"
        android:layout_alignTop="@+id/BlueBar"
        android:layout_alignEnd="@+id/BlueBar"
        android:layout_alignRight="@+id/BlueBar"
        android:layout_alignBottom="@+id/BlueBar"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/BlueBar"
        app:layout_constraintEnd_toEndOf="@+id/BlueBar"
        app:layout_constraintStart_toStartOf="@+id/BlueBar"
        app:layout_constraintTop_toTopOf="@+id/BlueBar"
        android:max="255"
        />



    <TextView
        android:id="@+id/BlueVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/GreenVal"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:text="@string/_BlueVal" />


</RelativeLayout>